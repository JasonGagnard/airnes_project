<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/prenom_reg"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_backgroung"
        android:drawableLeft="@drawable/baseline_person_24"
        android:elevation="3dp"
        android:padding="13dp"
        android:text="Prénom"
        android:textColor="#80809A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="150dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/nom_reg"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_backgroung"
        android:drawableLeft="@drawable/baseline_person_24"
        android:elevation="3dp"
        android:padding="13dp"
        android:text="Nom"
        android:textColor="#80809A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_backgroung"
        android:drawableLeft="@drawable/baseline_mail_24"
        android:elevation="3dp"
        android:padding="13dp"
        android:text="Email"
        android:textColor="#80809A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="290dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/telephone_reg"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_backgroung"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:elevation="3dp"
        android:padding="13dp"
        android:text="Tel."
        android:textColor="#80809A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="360dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/motdepasse_reg"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:background="@drawable/edittext_backgroung"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:elevation="3dp"
        android:padding="13dp"
        android:text="Mot de passe"
        android:textColor="#80809A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="430dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:textAllCaps="false"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="500dp" />

    <EditText
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="J'ai déja un compte"
        android:textAllCaps="false"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="550dp" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>